=== MLWorkflow.xxp ===
workflow MLWorkflow {
    define task train;
    define task evaluate;
    
    configure task train {}
    configure task evaluate {}

    START -> train -> evaluate -> END;
}

=== MLExperiment.espace ===
experiment MLExperiment {
    space training of MLWorkflow {
        strategy randomSearch;
        
        configure task ###train### {
            param epochs = range(10, 100, 10);
        }
    }
    
    control {
        start -> training -> end;
    }
}


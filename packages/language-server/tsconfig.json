
{
  "extends": "../../tsconfig.json",    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "exactOptionalPropertyTypes": false,
      "strict": false,
      "strictNullChecks": false,
      "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
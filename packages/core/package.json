{
    "name": "@extremexp/core",
    "version": "1.0.0",
    "description": "Core utilities and shared functionality for extremexp",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsc --build",
        "build:watch": "tsc --build --watch",
        "clean": "tsc --build --clean",
        "test": "echo \"No tests specified\" && exit 0",
		"antlr": "antlr4ng -Dlanguage=TypeScript -visitor -listener -o src/language/generated/ -Xexact-output-dir src/language/grammar/*.g4"
    },
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "keywords": [
        "extremexp",
        "core",
        "utilities"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
         "antlr4-c3": "^3.4.1"
    },
    "devDependencies": {
        "typescript": "^5.4.5",
		"antlr4ng": "^3.0.13",
		"antlr4ng-cli": "^2.0.0"
    }
}
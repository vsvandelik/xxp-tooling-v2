{
    "name": "extremexp-vs-code-extension",
    "displayName": "XXP & ESPACE Language Support",
    "version": "1.0.0",
    "description": "VS Code extension for XXP and ESPACE languages",
    "publisher": "extremexp",
    "main": "./dist/extension.js",
    "types": "./dist/extension.d.ts",
    "exports": {
        ".": {
            "types": "./dist/extension.d.ts",
            "default": "./dist/extension.js"
        }
    },    
    "scripts": {
        "build": "tsc --build",
        "build:watch": "tsc --build --watch",
        "clean": "tsc --build --clean",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "vscode:prepublish": "npm run build",
        "package": "vsce package"
    },
    "keywords": [
        "xxp",
        "espace",
        "language",
        "syntax highlighting",
        "programming language"
    ],
    "author": "ExtremEXP Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/extremexp/xxp-tooling-v2.git"
    },
    "bugs": {
        "url": "https://github.com/extremexp/xxp-tooling-v2/issues"
    },
    "homepage": "https://github.com/extremexp/xxp-tooling-v2#readme",    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [],
    "contributes": {
        "languages": [
            {
                "id": "xxp",
                "aliases": [
                    "XXP",
                    "xxp"
                ],
                "extensions": [
                    ".xxp"
                ],
                "configuration": "./src/language-configuration/language-configuration.json"
            },
            {
                "id": "espace",
                "aliases": [
                    "ESPACE",
                    "espace"
                ],
                "extensions": [
                    ".espace"
                ],
                "configuration": "./src/language-configuration/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "xxp",
                "scopeName": "source.xxp",
                "path": "./src/language-configuration/xxp.tmLanguage.json"
            },
            {
                "language": "espace",
                "scopeName": "source.espace",
                "path": "./src/language-configuration/espace.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
    },
    "devDependencies": {
        "typescript": "^5.4.5",
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^2.24.0"
    }
}
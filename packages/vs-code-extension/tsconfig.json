{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "module": "ES2022",
        "target": "ES2020",
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ],  
    "references": [
        {
            "path": "../experiment-runner-server"
        },
        {
            "path": "../workflow-repository"
        }
    ]
}
{
    "name": "@extremexp/experiment-runner",
    "version": "1.0.0",
    "description": "Experiment execution engine for ExtremeXP workflows",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "experiment-runner": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "scripts": {
        "build": "tsc --build",
        "build:watch": "tsc --build --watch",
        "clean": "tsc --build --clean",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "extremexp",
        "experiment",
        "runner",
        "execution"
    ],
    "author": "ExtremeXP Team",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "@extremexp/core": "^1.0.0",
        "ora": "^8.2.0",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7"
    }
}

{
    "name": "@extremexp/experiment-runner-server",
    "version": "1.0.0",
    "description": "HTTP server for ExtremeXP experiment execution",
    "type": "module",
    "main": "./dist/server.js",
    "types": "./dist/server.d.ts",
    "bin": {
        "experiment-runner-server": "./dist/server.js"
    },
    "exports": {
        ".": {
            "types": "./dist/server.d.ts",
            "default": "./dist/server.js"
        }
    },
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "scripts": {
        "build": "tsc --build",
        "build:watch": "tsc --build --watch",
        "clean": "tsc --build --clean",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "extremexp",
        "experiment",
        "runner",
        "server",
        "http"
    ],
    "author": "ExtremeXP Team",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "@extremexp/core": "^1.0.0",
        "@extremexp/experiment-runner": "^1.0.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "socket.io": "^4.8.1"
    }
}

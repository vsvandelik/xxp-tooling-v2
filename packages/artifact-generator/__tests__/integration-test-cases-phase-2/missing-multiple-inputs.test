=== multiInputWorkflow.xxp ===
workflow MultiInputWorkflow {
    define task merger;
    define data input1;
    define data input2;
    define data input3;
    
    START -> merger -> END;
    
    configure task merger {
        implementation "merge.py";
        input input1, input2, input3;
    }
}

=== missing-multiple-inputs.espace ===
